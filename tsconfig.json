{
  "$schema": "https://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ESNext",

    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },

  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
